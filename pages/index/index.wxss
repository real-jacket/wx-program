/**index.wxss**/
.container{
  justify-content: flex-start;
}
.changelanguage{
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.44);
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.changelanguage > view{
  text-align: center;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.changelanguage > view.active{
  color: red;
  transform: scale(1.2)
}

.input-text{
  width: 100%;
  position: relative;
}
.input-text > .iconfont{
  position: absolute;
  right: 10rpx;
  top: 30rpx;
  font-size: 40rpx;
  color: #888;
}
.input-text > .input-area{
  border-bottom: 1px solid #c7cee0;
  padding: 30rpx 0rpx 30rpx 30rpx;
}
.input-text > .input-area> textarea {
  background-color: #fff;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.input-text > .text-area{
  min-height: 80rpx;
  padding: 30rpx 10rpx 30rpx 30rpx;
}
.input-text>.text-area>.text-title{
  font-size: 28rpx;
  color: #8995a1;
}
.input-text>.text-area>.text-result{
  padding: 20rpx 0;
}